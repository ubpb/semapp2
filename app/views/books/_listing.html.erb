<% unless books.empty? %>
  <div id="book-order-listing" class="pui-collection-view">
    <% books.each do |book| %>
      <div class="item book-order">
        <div class="date">Auftrag vom: <%= book.created_at.to_s(:long) %></div>
        <div class="date">Titel ID: <%= book.ils_id %></div>
        <div class="source">
          <%= render 'shared_partials/book_ref', :book => book %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="pui-panel notice align-center">
    <p>Aktuell sind <strong>keine</strong> Auftr√§ge offen.</p>
  </div>
<% end %>
