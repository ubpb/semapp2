<% unless media.empty? %>
  <div id="book-order-listing" class="pui-collection-view">
    <% media.each do |media| %>
      <div class="item book-order">
        <div class="date"><%= media.created_at.to_s(:long) %></div>
        <div class="signature"><%= media.signature %></div>
        <div class="source">
          <%= media.title %><%= ', ' + media.author if media.author.present? %><%= ', ' + media.year if media.year.present? %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="pui-panel notice align-center">
    <p>Aktuell sind <strong>keine</strong> Auftr√§ge offen.</p>
  </div>
<% end %>
