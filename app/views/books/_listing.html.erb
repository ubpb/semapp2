<% unless books.empty? %>
  <div id="book-order-listing" class="pui-collection-view">
    <% books.each do |book| %>
      <div class="item book-order">
        <div class="date"><%= book.created_at.to_s(:long) %></div>
        <div class="signature"><%= book.signature %></div>
        <div class="source">
          <%= book.title %><%= ', ' + book.author if book.author.present? %><%= ', ' + book.year if book.year.present? %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="pui-panel notice align-center">
    <p>Aktuell sind <strong>keine</strong> Auftr√§ge offen.</p>
  </div>
<% end %>
