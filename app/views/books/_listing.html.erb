<% unless entries.empty? %>
  <div id="book-order-listing" class="pui-collection-view">
    <% entries.each do |entry| %>
      <div class="item book-order">
        <div class="date"><%= entry.created_at.to_s(:long) %></div>
        <div class="signature"><%= entry.signature %></div>
        <div class="source">
          <%= entry.title %><%= ', ' + entry.author if entry.author.present? %><%= ', ' + entry.year if entry.year.present? %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="pui-panel notice align-center">
    <p>Aktuell sind <strong>keine</strong> Auftr&auml;ge offen.</p>
  </div>
<% end %>