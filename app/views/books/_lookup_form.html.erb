<%= form_tag(new_sem_app_book_path, :method => :get, :class => 'formtastic') do %>
  <fieldset class="inputs">
    <ol>
      <li class="string">
        <label>Signatur beginnt mit</label>
        <%= text_field_tag 'signature', @signature %>
        <p class="inline-hints">
          Bitte recherchieren Sie die Signatur in unserem <a href="https://katalog.ub.uni-paderborn.de" target="blank">Katalog</a>.
          <strong>Eingabe der Signatur muss ohne Standortkennung erfolgen, z.B. AHC1242.</strong>
        </p>
      </li>
    </ol>
  </fieldset>
  <fieldset class="buttons">
    <ol>
      <li class="commit">
        <%= submit_tag 'Suchen' %>
      </li>
    </ol>
  </fieldset>
<% end %>
