<% semantic_form_for [@sem_app, @entry] do |f| %>
  <%= hidden_field_tag :origin_id, @origin_id %>

  <% f.inputs do %>
    <%= f.input :style, :label => 'Typ', :as => :select, :collection => {"Groß (h1)" => 0, "Mittel (h2)" => 1, "Klein (h3)" => 2}, :selected => (@entry.style || 0), :required => false %>
    <%= f.input :headline, :label => 'Überschrift' %>
  <% end %>

  <% f.buttons do %>
    <%= f.commit_button 'Speichern' %>
    <li class="commit">
      <%= link_to 'Abbrechen', sem_app_path(@entry.sem_app, :anchor => 'media') %>
    </li>
  <% end %>
<% end %>
