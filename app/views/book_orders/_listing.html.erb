<% unless entries.empty? %>
  <div id="book-order-listing" class="pui-collection-view">
    <% entries.each do |entry| %>
      <div class="item book-order">
        <div class="date"><%= entry.created_at.to_s(:long) %></div>
        <div class="signature"><%= h(entry.signature) %></div>
        <div class="source">
          <%= h(entry.title) %><%= ', ' + h(entry.author) if entry.author.present? %><%= ', ' + h(entry.year) if entry.year.present? %>
        </div>
        <div class="state">In Bearbeitung</div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="pui-panel notice align-center">
    <p>Aktuell sind <strong>keine</strong> Auftr√§ge offen.</p>
  </div>
<% end %>