<% if entry.attachments.present? %>
  <ol class="attachments clearfix">
    <% entry.attachments.each do |a| %>
      <li class="attachment">
        <% if a.description.present? %>
          <span class="description">
            <%= textilize_without_paragraph(a.description) %>
          </span>
        <% end %>
        <span class="download-link">
          <%= link_to 'Datei herunterladen', a.attachable.url %>
          (<%= a.attachable_file_name %>)
        </span>
      </li>
    <% end %>
  </ol>
<% end %>