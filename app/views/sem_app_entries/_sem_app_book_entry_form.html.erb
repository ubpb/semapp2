<% book_entry = entry.instance %>

<%= render_sem_app_entry(entry) %>

<% remote_form_for(book_entry, :url => sem_app_entry_url(entry.sem_app.id, entry.id), :method => :put) do |f| %>
  <fieldset>
    <ol>
      <li>
        <%= f.label     :comment, "Kommentar" %>
        <%= f.text_area :comment, :rows => 8, :cols => 73 %>
      </li>
    </ol>
  </fieldset>
  <fieldset class="submit">
    <%= f.submit    "Speichern" %>
    <%= link_to_remote('Abbrechen',
      :url => sem_app_entry_url(entry.sem_app.id, entry.id),
      :method => :get) %>
  </fieldset>
<% end %>


<script type="text/javascript">
  jQuery(function() {
    jQuery("textarea:first").focus();
  });
</script>