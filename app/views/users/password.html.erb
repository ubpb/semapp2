<h2 class="section">Mein Passwort ändern</h2>
<% semantic_form_for @user, :url => change_password_user_path do |f| %>
  <% f.inputs do %>
    <%= f.input :password, :label => 'Passwort' %>
    <%= f.input :password_confirmation, :label => 'Passwort wiederholen' %>
  <% end %>

  <% f.buttons do %>
    <%= f.commit_button 'Passwort ändern' %>
    <li>
      <%= link_to 'Abbrechen', user_path %>
    </li>
  <% end %>
<% end %>

<span>* Pflichtfelder</span>