<h2 class="section">Mein Bereich</h2>

<div class="pui-tabs-wrapper">
  <ul class="pui-tabs">
    <li><a href="#apps">Meine eSeminarapparate</a></li>
  </ul>

  <div class="pui-tab-panes">
    <div id="my-semapps-panel">
      <% if @user.ownerships.present? %>
        <div class="pui-collection-view">
          <% @user.ownerships.each do |o| %>
            <% next unless o.sem_app %>
            <div class="item">
              <%= render 'sem_app', :sem_app => o.sem_app %>
            </div>
          <% end %>
        </div>
        <span style="font-size:90%">*eSeminarapparate sind erst dann öffentlich sichtbar wenn sie durch die Universitätsbibliothek geprüft wurden.</span>
      <% else %>
        <div class="pui-panel notice align-center">
          Sie haben noch keine eSeminarapparate beantragt.<br/>
          <%= link_to '&raquo; eSeminarapparat beantragen', new_sem_app_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>