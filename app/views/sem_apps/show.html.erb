<% if @sem_app.is_editable_for?(current_user) %>
  <% content_for :head do %>
    <%= javascript_include_tag 'sem_apps/common.js' %>
    <%= javascript_include_tag 'sem_apps/books.js' %>
    <%= javascript_include_tag 'sem_apps/media.js' %>
  <% end %>

  <div class="pui-panel align-right">
    <%= link_to 'Einstellungen', edit_sem_app_path(@sem_app), :class => 'pui-button' -%>
    <% if current_user and current_user.is_admin? %>
      <%= link_to 'Administrieren', admin_sem_app_path(@sem_app), :class => 'pui-button' -%>
    <% end %>
  </div>
<% end %>

<% unless @sem_app.is_from_current_semester? %>
