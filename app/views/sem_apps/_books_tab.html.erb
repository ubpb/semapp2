<% if @sem_app.editable? %>
  <% content_for :head do %>
    <%= javascript_include_tag 'sem_apps/books.js' %>
  <% end %>
<% end %>

<% if @sem_app.editable? %>
  <div class="pui-panel align-right">
    <%= link_to 'Buchaufträge', sem_app_books_path(@sem_app), :class => 'pui-button' %>
    <%= link_to('Neues Buch', new_sem_app_book_path(@sem_app), :class => 'pui-button') %>
  </div>
<% end %>

<% if @sem_app.books.present? %>
  <% if @sem_app.has_book_shelf? %>
    <div class="pui-panel notice align-center">
      Sie finden die Bücher in der <strong><%= h(@sem_app.location.title) %></strong> im
      Seminarapparat <strong>Nr. <%= h(@sem_app.book_shelf.slot_number) %></strong>
    </div>
  <% else %>
    <div class="pui-panel notice align-center">
      <p>Die Bücher dieses Seminarapparates finden Sie regulären Bestand.</p>
    </div>
  <% end %>

  <div id="books-listing" class="pui-collection-view">
    <% @sem_app.books.each do |book| %>
      <%= render 'book', :book => book, :sem_app => @sem_app %>
    <% end %>
  </div>
<% else %>
  <div class="pui-panel notice align-center">
    Für diesen eSeminarapparat sind aktuell <strong>keine</strong> Bücher gelistet.
  </div>
<% end %>