<% if sem_apps and not sem_apps.empty? %>
  <table class="pui-datagrid">
    <% for sem_app in sem_apps %>
      <tr>
        <td align="center"><%= sem_app.id %></td>
        <td width="100%">
          <%= link_to(sem_app.title, sem_app_url(sem_app.id)) %>
          (<%= sem_app.semester.title %>)
          <div style="font-size: 90%">
            <%= h(sem_app.tutors) %>
          </div>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  <% pui_panel :panel_style => 'highlight', :style => "text-align: center" do %>
    <p>Keine eSeminarapparate gefunden</p>
  <% end %>
<% end %>

