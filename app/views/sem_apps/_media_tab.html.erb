<% if @sem_app.is_editable_for?(current_user) %>
  <div class="pui-panel align-right">
    <%= link_to 'TBD', '#', :class => 'pui-button' %>
  </div>
<% end %>

<% if @sem_app.media.present? %>
  <div id="media-listing" class="listing pui-collection-view">
    <% @sem_app.media.each do |e| %>
      <%= render 'entry', :entry => e %>
    <% end %>
  </div>
<% else %>
  <div class="pui-panel notice align-center">
    Für diesen eSeminarapparat sind aktuell <strong>keine</strong> Medien verfügbar.
  </div>
<% end %>