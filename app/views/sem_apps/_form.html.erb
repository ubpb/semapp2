<% semantic_form_for @sem_app do |f| %>
  <% f.inputs :name => 'Basisdaten' do %>
    <% if @sem_app.new_record? %>
      <%= f.input :semester,  :label => 'Semester', :hint => 'In welchem Semester findet Ihre Veranstaltung statt?' %>
      <%= f.input :title,     :label => 'Titel',    :hint => 'Titel der Veranstaltung' %>
      <%= f.input :course_id, :label => 'Kurs-ID',  :hint => 'Wenn bekannt geben Sie bitte die eindeutige Kurs-ID an.', :required => false %>
    <% else %>
      <%= f.input :semester,  :label => 'Semester', :input_html => {:disabled => true} %>
      <%= f.input :title,     :label => 'Titel',    :input_html => {:disabled => true} %>
      <%= f.input :course_id, :label => 'Kurs-ID',  :input_html => {:disabled => true}, :required => false %>
    <% end %>
    <%= f.input :tutors, :label => 'Tutor(en)', :as => :string, :hint => 'Die Namen der beteiligten Dozierenden und/oder Tutoren. Trennen Sie mehrere Tutoren durch ein Komma.' %>
  <% end %>

  <% f.inputs :name => 'Bibliotheksdaten' do %>
    <% if @sem_app.new_record? %>
      <%= f.input :location, :label => 'Standort', :hint => 'Welcher Fachbibliothek soll der eSeminarapparat zugeordnet werden?' %>
    <% else %>
      <%= f.input :location, :label => 'Standort', :input_html => {:disabled => true} %>
    <% end %>
  <% end %>

  <% f.inputs :name => 'Zugriffsschutz' do %>
    <%= f.input :shared_secret, :label => 'Kennung für den Lesezugriff',
      :hint => '''
    Bitte vergeben Sie eine Kennung für den Lesezugriff auf die elektronischen
    Volltexte. Jeder der dieses Passwort kennt hat damit Lesezugriff auf die
    in diesem eSeminarapparat hinterlegten Dateien. Sie sollten dieses Passwort
    nur dem begrenzten Teilnehmerkreis Ihrer Veranstaltung bekannt machen.
    (In einer späteren Programmversion werden ihre Studierenden sich
    zusätzlich mittels ihrer persönlichen IMT Kennung anmelden können.)
    ''' %>
  <% end %>

  <% f.buttons do %>
    <% if @sem_app.new_record? %>
      <%= f.commit_button 'eSeminarapparat beantragen' %>
      <li>
        <%= link_to 'Abbrechen', user_path(:anchor => :apps) %>
      </li>
    <% else %>
      <%= f.commit_button 'Speichern' %>
      <li>
        <%= link_to 'Abbrechen', sem_app_path(@sem_app) %>
      </li>
    <% end %>
  <% end %>
<% end %>

<span>* Pflichtfelder</span>