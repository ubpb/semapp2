<h3>eSeminarapparate</h3>

<div class="subcolumns">
  <div class="c75l">
    <div class="subcl">
      <% if @sem_apps and not @sem_apps.empty?  %>
        <%= will_paginate @sem_apps, :style => "text-align: left" %>

        <table class="pui-datagrid">
          <tr>
            <th>Titel</th>
            <th></th>
          </tr>
          <% @sem_apps.each do |s| %>
            <tr>
              <td>
                <%= link_to h(s.title), sem_app_url(s) %>
              </td>
              <td align="right">
                <%= pui_link_icon 'Bearbeiten', 'pencil', edit_admin_sem_app_path(s) %>
                <%= pui_link_icon 'Löschen', 'trash', admin_sem_app_path(s), :method => :delete, :confirm => "Soll der eSeminarapparat #{s.id} wirklich gelöscht werden?" %>
              </td>
            </tr>
          <% end %>
        </table>
      <% else %>
        <% pui_panel :panel_style => 'highlight' do %>
          <p>
            Keine eSeminarapparate gefunden.
          </p>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="c25r">
    <div class="subcr pui-subcr highlight ui-corner-right">
      <h4>Aktionen</h4>
      <ul class="pui-subnav-v">
        <li>
          <% link_to(new_admin_sem_app_path) do %>
            <span class="ui-icon ui-icon-plus"></span>Neuen Sem.App
          <% end %>
        </li>
      </ul>
    </div>

    <% org_units = OrgUnit.find(:all, :order => 'position') %>
    <% if org_units and not org_units.empty? %>
      <div class="subcr pui-subcr highlight ui-corner-right">
        <h4>Org. Filter</h4>
        <ul class="pui-subnav-v">
          <li><%= link_to('Alle', :ou => nil, :sf => params[:sf]) %></li>
          <% org_units.each do |ou| %>
            <li><%= link_to(h(ou.title), :ou => ou.id, :sf => params[:sf]) %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="subcr pui-subcr highlight ui-corner-right">
      <h4>Status Filter</h4>
      <ul class="pui-subnav-v">
        <li><%= link_to('Alle',      :sf => nil,            :ou => params[:ou]) %></li>
        <li><%= link_to('Zu prüfen', :sf => 'non-approved', :ou => params[:ou]) %></li>
        <li><%= link_to('Inaktiv',   :sf => 'inactive',     :ou => params[:ou]) %></li>
      </ul>
    </div>
  </div>
</div>