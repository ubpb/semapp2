<h4 class="section">Auftrag</h4>
<div class="pui-collection-view labeled">
  <%= labeled_item :label => 'Auftrag #',       :content => h(scanjob.id) %>
  <%= labeled_item :label => 'Auftrag vom',     :content => h(scanjob.created_at.to_formatted_s(:short)) %>
  <%= labeled_item :label => 'Quelle',          :content => h(scanjob.entry.to_s) %>
  <%= labeled_item :label => 'eSeminarapparat', :content => h(scanjob.entry.sem_app.full_title) %>
</div>

<h4 class="section">Scan-Info</h4>
<div class="pui-collection-view labeled">
  <%= labeled_item :label => 'Signatur',       :content => h(scanjob.signature) %>
  <%= labeled_item :label => 'Seiten von-bis', :content => h(scanjob.pages) %>
</div>

<div class="pui-view align-center">
  <%= image_tag admin_scanjob_barcode_path(scanjob) %>
</div>