<h3 class="section clearfix" style="margin-bottom: 30px">
  <div style="float: left">
    Scanjob &raquo; Details
  </div>

  <div class="align-right" style="margin-bottom: 5px">
    <%= link_to admin_scanjobs_path(:anchor => @scanjob.state), :class => 'pui-button' do %>
      <%= icon 'arrow-curve-180-left.png' %>
      Zurück zur Übersicht
    <% end %>

    <%= link_to polymorphic_path([:edit, @scanjob.media.instance]), :class => "pui-button" do %>
      <%= icon 'wrench.png' %>
      Eintrag Bearbeiten
    <% end %>

    <%= link_to admin_scanjob_print_job_path(@scanjob), :class => "pui-button print" do %>
      <%= icon 'printer.png' %>
      Auftrag drucken
    <% end %>
  </div>
</h3>

<%= render 'scanjob', :scanjob => @scanjob %>
