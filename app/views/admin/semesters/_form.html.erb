<%= form_for [:admin, @semester], :html => {:class => 'puiform'} do |f| %>
  <%= f.error_messages %>
  <fieldset>
    <legend>Semester</legend>
    <ol>
      <li>
        <div class="container">
          <%= f.check_box  :current %>
          <%= f.label      :current, "Aktuelles Semester?" %>
        </div>
      </li>
      <li>
        <%= f.label      :title, "Titel" %>
        <%= f.text_field :title %>
        <div class="pui-tooltip">
          Beschreibender Titel des Semsters (z.B. Wintersemester 2009/2010)
        </div>
      </li>
    </ol>
  </fieldset>
  <fieldset class="submit">
    <legend>Formular absenden</legend>
    <%= f.submit 'Speichern' %>
    <%= link_to 'Abbrechen', admin_semesters_path %>
  </fieldset>
<% end %>

