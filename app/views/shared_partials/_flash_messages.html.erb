<% if flash[:success].present? %>
  <div class="pui-panel success align-center">
    <%= raw flash[:success] %>
  </div>
<% end %>
<% if flash[:notice].present? %>
  <div class="pui-panel notice align-center">
    <%= raw flash[:notice] %>
  </div>
<% end %>
<% if flash[:error].present? %>
  <div class="pui-panel error align-center">
    <%= raw flash[:error] %>
  </div>
<% end %>
<% if flash[:failure].present? %>
  <div class="pui-panel error align-center">
    <%= raw flash[:failure] %>
  </div>
<% end %>
<% if flash[:alert].present? %>
  <div class="pui-panel error align-center">
    <%= raw flash[:alert] %>
  </div>
<% end %>
