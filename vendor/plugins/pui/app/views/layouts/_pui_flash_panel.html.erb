<% if flash[:notice] and not flash[:notice].empty? %>
  <% pui_panel :panel_style => 'success', :style => 'margin: 0 0 20px 0; padding: 12px; text-align:center' do %>
    <%= flash[:notice] %>
  <% end %>
<% end %>

<% if flash[:error] and not flash[:error].empty? %>
  <% pui_panel :panel_style => 'error', :style => 'margin: 0 0 20px 0; padding: 12px; text-align:center' do %>
    <%= flash[:error] %>
  <% end %>
<% end %>