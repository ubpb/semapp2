    gemspec.summary = "A collection of UI helper for Rails apps."
    gemspec.email = "info@provideal.net"
    gemspec.homepage = "http://github.com/provideal/provideal-ui"
    gemspec.authors = ["RenÃ© Sprotte"]
    gemspec.add_dependency('provideal-plugin-utils', '>= 0.1.3')
    gemspec.add_dependency('formtastic', '>= 0.9.7')
  end
rescue LoadError
  puts "Jeweler not available. Install it with: sudo gem install jeweler"
end